<% page_title 'Email addresses' %>

<% unless @competitors.empty? %>
  <h2>Confirmed competitors</h2>
  <p><b>BCC:</b> <%= @competitors.map(&:email).join(', ') %></p>
<% end %>

<% unless @guests.empty? %>
  <h2>Confirmed guests</h2>
  <p><b>BCC:</b> <%= @guests.map(&:email).join(', ') %></p>
<% end %>

<% unless @locals.empty? %>
  <h2>Confirmed locals</h2>
  <p><b>BCC:</b> <%= @locals.map(&:email).join(', ') %></p>
<% end %>

<% unless @awaiting_payment.empty? %>
  <h2>Unconfirmed, not cancelled, and not paid yet</h2>
  <p><b>BCC:</b> <%= @awaiting_payment.map(&:email).join(', ') %></p>
<% end %>
