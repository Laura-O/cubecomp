<% page_title @theme.name %>

<%= link_to 'New template', new_admin_theme_theme_file_path(@theme) %>

<ul>
  <% @theme.files.each do |template| %>
    <li>
      <%= link_to template.filename, edit_admin_theme_file_path(template) %>
      (<%= link_to 'Destroy', admin_theme_file_path(template), method: :delete, data: { confirm: 'Are you sure?' } %>)
    </li>
  <% end %>
</ul>
