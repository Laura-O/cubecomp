<% page_title "Users" %>

<% if current_user.policy.create_user?(User.new) %>
  <p><%= link_to 'New user', new_admin_user_path %></p>
<% end %>

<% unless @active_users.empty? %>
  <h3>Active users</h3>
  <%= render 'table', users: @active_users %>
<% end %>

<% unless @inactive_delegates.empty? %>
  <h3>Inactive delegates</h3>
  <%= render 'table', users: @inactive_delegates %>
<% end %>

<% unless @inactive_others.empty? %>
  <h3>Inactive users</h3>
  <%= render 'table', users: @inactive_others %>
<% end %>
