<% page_title 'News' %>

<%= render 'notice' %>

<table class='default-table'>
  <thead>
    <tr>
      <th>Time</th>
      <th>Language</th>
      <th>Text</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.time.to_s(:short) %></td>
        <td><%= news.locale.name %></td>
        <td><%= truncate(news.text, length: 50, separator: ' ') %></td>
        <td><%= link_to 'Edit', edit_admin_news_path(news) %></td>
        <td><%= link_to 'Destroy', admin_news_path(news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News item', new_admin_competition_news_path %>
